public String aOrAn(String word) {
    return applyRuleAnOrA(word) ? 'an ' + word : 'a ' + word
}

public Boolean applyRuleAnOrA(String word){
    String[] cs = new String<>('a', 'e', 'i', 'o', 'u');
    Boolean snStarts;
    for(String c : cs){
        if(word.startsWith(c)){
            return true;
        }
    }
    return false;
}